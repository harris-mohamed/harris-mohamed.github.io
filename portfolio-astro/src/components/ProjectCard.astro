---
interface Props {
  title: string;
  image: string;
  status?: string;
  modalId: string;
}

const { title, image, status, modalId } = Astro.props;
---

<div class="col-md-6 col-lg-4 mb-5">
  <div class="portfolio-item mx-auto" data-toggle="modal" data-target={`#${modalId}`}>
    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
      <div class="portfolio-item-caption-content text-center text-white">
        <i class="fas fa-plus fa-3x"></i>
      </div>
    </div>
    <img class="img-fluid" src={`/images/${image}`} alt={title} />
  </div>
  <p class="text-center mt-2">
    {status && <span class="badge badge-info">{status}</span>}<br />
    <strong>{title}</strong>
  </p>
  <p class="text-center">
    <a href="#" data-toggle="modal" data-target={`#${modalId}`}>Click for details</a>
  </p>
</div>
