---
interface Props {
  title: string;
  image: string;
  status?: string;
  modalId: string;
}

const { title, image, status, modalId } = Astro.props;
---

<div class="col-md-6 col-lg-4 mb-5">
  <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target={`#${modalId}`}>
    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
      <div class="portfolio-item-caption-content text-center text-white">
        <i class="fas fa-plus fa-3x"></i>
      </div>
    </div>
    <img class="img-fluid" src={`/images/${image}`} alt={title} />
  </div>
  {status && (
    <div class="text-center">
      <button type="button" class="btn btn-outline-success" disabled>{status}</button>
    </div>
  )}
  <p class="page-section-subheading text-center text-secondary mb-0">{title}</p>
  <div class="row justify-content-center">
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target={`#${modalId}`}>Click for details</button>
  </div>
</div>
